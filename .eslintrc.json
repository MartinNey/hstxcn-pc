{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
      "html",
      "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": [
          "error",
          {
            "allow": ["warn", "error"]
          }
        ],
        "indent": [
            "error",
            2
            , {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
          "error",
          {
            "args": "none"
          }
        ]
    }
}
